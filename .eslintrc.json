{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "camelcase": "off",
      "import/prefer-default-export": "off",
      "class-methods-use-this": "off",
      "@typescrpit-eslint/no-unused-vars": ["error", {
        "argsIgnorePattern": "_"
      }],
      "no-empty-function": "off",
      "import/extensions": [
	      "error",
	      "ignorePackages",
	      {
	        "ts": "never"
	      }
	    ],
      "no-console": "off"
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
}
